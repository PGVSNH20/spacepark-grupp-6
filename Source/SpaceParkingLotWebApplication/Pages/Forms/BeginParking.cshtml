@page
@model SpaceParkingLotWebApplication.Pages.Forms.BeginParking
@{
}
@{
    ViewData["Title"] = "Begin Parking";
}

<h1> Begin Parking </h1>

<form method="post">
    <input type="text" asp-for="Parking.Name" placeholder="Name of driver" />
    <input type="text" asp-for="Parking.VehicleID" placeholder="Vehicle Name" />
    <input type="time" asp-for="Time"  asp-format="{0:HH:mm}" placeholder="Star parking" />
    <input type="time" asp-for="Parking.Endtime" placeholder="Stop parking" />
    <button type="submit" class="btn btn-primary">Begin parking!</button>
</form>

<form method="post">
    <div>
        <label>
            Choose starship
        </label>
        <br />
        <select name="shipSelect">
            <option value="">Select a ship</option>
            @{
                @if (Model.chooseShip)
                {
                    @foreach (var record in Model.starWarsUniverseShips)
                    {
                        <option value="@Html.DisplayFor(modelItem3 => record.model)">
                            @Html.DisplayFor(modelItem3 => record.model)
                        </option>
                    }
                }
            }
        </select>
        <button type="submit" class="btn btn-primary">Park spaceship !</button>
    </div>
</form>